<div class="row">
	<div class="col-md-3">
		<%= image_tag @user.profile.avatar.url(:thumb), class: 'profile-image img-rounded img-responsive' %>
	</div>

	<div class="col-md-6">
	
		<h1><%= @user.profile.first_name %> <%= @user.profile.last_name %> </h1>
		<h3><span class="job-title-icon"><%= job_title_icon %></span><%= @user.profile.job_title %> </h3>

		
		<div class="well profile-description">
			<h3>Description</h3>
			<%= @user.profile.description %>
		</div>

		<div class="well contact-info">
			<h3>Contact Info</h3>
			<% if true#current_user.plan_id == 2 %>
				Ph: <%= @user.profile.phone_number %> <br/>
				Email: <%= @user.profile.contact_email %> <br/>
			<% end %>
		</div>

	</div>


<div class="row">
	<div class="col-md-12 well">
		<h5><strong>Note:</strong> Look up 'heroku amazon s3' in Google to save image files</h5>
	</div>
</div>


</div>